<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ViewAccountsController"
            prefWidth="600" prefHeight="400" style="-fx-background-color: linear-gradient(to right, #2193b0, #6dd5ed);">

    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="500" prefHeight="300">
        <Label text="Your Accounts" style="-fx-font-size: 24px; -fx-text-fill: white;" />

        <ListView fx:id="accountListView" prefHeight="200" prefWidth="480"
                  style="-fx-background-color: white; -fx-border-radius: 8; -fx-background-radius: 8;" />

        <Button text="Back" onAction="#handleBack"
                style="-fx-background-color: white; -fx-text-fill: #2193b0; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>
