<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #0A3D62, #3C6382);">

    <!-- Center Card -->
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="70"
          AnchorPane.rightAnchor="70"
          AnchorPane.topAnchor="70"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-border-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);
                 -fx-padding: 25;">

        <Label text="Customer Login"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;"/>

        <TextField fx:id="idField" promptText="Customer ID"
                   style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>

        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>

        <Label fx:id="errorLabel" text=""
               style="-fx-text-fill: red; -fx-font-size: 12px;"
               wrapText="true"
               alignment="CENTER"
               maxWidth="220"/>

        <Button text="Login" fx:id="loginButton"
                onAction="#handleLogin" prefWidth="220"
                style="-fx-background-color: #0A3D62;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8;"/>

        <Button text="Back" fx:id="backButton"
                onAction="#handleBack" prefWidth="220"
                style="-fx-background-color: #3C6382;
                       -fx-text-fill: white;
                       -fx-font-size: 14px;
                       -fx-background-radius: 8;"/>

    </VBox>

</AnchorPane>
