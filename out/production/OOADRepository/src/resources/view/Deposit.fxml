<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DepositController"
            prefWidth="400" prefHeight="300"
            stylesheets="@main.css">

    <VBox alignment="CENTER" spacing="12" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">
        <Label text="Deposit Funds" styleClass="title-label" />

        <TextField fx:id="accountNumberField" promptText="Account Number" />
        <TextField fx:id="amountField" promptText="Amount (BWP)" />

        <Button text="Deposit" onAction="#handleDeposit" styleClass="menu-button" prefWidth="200"/>
        <Button text="Back" onAction="#handleBack" styleClass="menu-button" prefWidth="200"/>
    </VBox>
</AnchorPane>
