<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="300"
            stylesheets="@main.css">

    <VBox alignment="CENTER" spacing="15" layoutX="50" layoutY="60" prefWidth="300" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">
        <Label text="Customer Login" styleClass="title-label" />

        <TextField fx:id="idField" promptText="Customer ID" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button text="Login" onAction="#handleLogin" styleClass="menu-button" prefWidth="200"/>
        <Button text="Back" onAction="#handleBack" styleClass="menu-button" prefWidth="200"/>
    </VBox>
</AnchorPane>
