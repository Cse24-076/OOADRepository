<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterIndividualController"
            prefWidth="520" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom, #F5F6FA, #E0E5EC);">

    <!-- Center Card -->
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.topAnchor="20"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-border-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);
                 -fx-padding: 20;">

        <Label text="Register Individual Customer"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;"/>

        <!-- PERSONAL INFO -->
        <TitledPane text="Personal Information" expanded="true"
                    style="-fx-text-fill: #0A3D62;">
            <content>
                <VBox spacing="10">
                    <TextField fx:id="idField" promptText="Customer ID"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <PasswordField fx:id="passwordField" promptText="Password"
                                   style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <TextField fx:id="firstNameField" promptText="First Name"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <TextField fx:id="surnameField" promptText="Surname"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <DatePicker fx:id="dobPicker" promptText="Date of Birth"
                                style="-fx-background-radius: 5;"/>
                    <ComboBox fx:id="nationalityBox" promptText="Nationality"
                              style="-fx-background-radius: 5;"/>
                    <TextField fx:id="addressField" promptText="Residential Address"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                </VBox>
            </content>
        </TitledPane>

        <!-- EMPLOYMENT INFO -->
        <TitledPane text="Employment and Income" expanded="true"
                    style="-fx-text-fill: #0A3D62;">
            <content>
                <VBox spacing="10">
                    <ComboBox fx:id="employmentStatusBox"
                              promptText="Employment Status"
                              style="-fx-background-radius: 5;"/>
                    <TextField fx:id="occupationField"
                               promptText="Occupation"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <ComboBox fx:id="incomeSourceBox"
                              promptText="Source of Income"
                              style="-fx-background-radius: 5;"/>
                    <TextField fx:id="monthlyIncomeField"
                               promptText="Monthly Income (Pula)"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                </VBox>
            </content>
        </TitledPane>

        <!-- CONTACT INFO -->
        <TitledPane text="Contact Information" expanded="true"
                    style="-fx-text-fill: #0A3D62;">
            <content>
                <VBox spacing="10">
                    <TextField fx:id="phoneField" promptText="Phone Number"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                    <TextField fx:id="emailField" promptText="Email Address"
                               style="-fx-background-color: #F9F9F9; -fx-background-radius: 5;"/>
                </VBox>
            </content>
        </TitledPane>

        <!-- BUTTONS -->
        <Button text="Register" fx:id="registerButton"
                onAction="#handleRegister"
                prefWidth="220"
                style="-fx-background-color: #0A3D62; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

        <Button text="Back" fx:id="backButton"
                onAction="#handleBack"
                prefWidth="220"
                style="-fx-background-color: #3C6382; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

        <!-- STATUS LABEL -->
        <Label fx:id="statusLabel"
               text=""
               style="-fx-text-fill: red; -fx-font-size: 12px;"
               wrapText="true"
               alignment="CENTER"
               maxWidth="220"/>
    </VBox>

</AnchorPane>
