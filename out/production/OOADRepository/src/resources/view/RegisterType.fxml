<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterTypeController"
            prefWidth="500" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #0A3D62, #3C6382);">

    <!-- Center Card -->
    <VBox alignment="CENTER" spacing="20"
          AnchorPane.leftAnchor="70"
          AnchorPane.rightAnchor="70"
          AnchorPane.topAnchor="80"
          AnchorPane.bottomAnchor="80"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-border-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);">

        <Label text="Select Customer Type"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;"/>

        <Button fx:id="individualButton"
                text="Individual Customer"
                onAction="#handleIndividual"
                prefWidth="240"
                style="-fx-background-color: #0A3D62;
                       -fx-text-fill: white;
                       -fx-font-size: 15px;
                       -fx-background-radius: 8;"/>

        <Button fx:id="companyButton"
                text="Company Customer"
                onAction="#handleCompany"
                prefWidth="240"
                style="-fx-background-color: #3C6382;
                       -fx-text-fill: white;
                       -fx-font-size: 15px;
                       -fx-background-radius: 8;"/>

        <Button text="Back"
                onAction="#handleBack"
                prefWidth="240"
                style="-fx-background-color: #95A5A6;
                       -fx-text-fill: white;
                       -fx-font-size: 15px;
                       -fx-background-radius: 8;"/>

    </VBox>

</AnchorPane>
