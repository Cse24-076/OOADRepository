<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.MainController"
            prefWidth="400" prefHeight="300"
            stylesheets="@main.css">

    <VBox alignment="CENTER" spacing="20" layoutX="50" layoutY="60" prefWidth="300" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="60">
        <Label text="🏦 Welcome to the Banking System" styleClass="title-label" />

        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" styleClass="menu-button" prefWidth="200"/>
        <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="menu-button" prefWidth="200"/>
    </VBox>
</AnchorPane>
