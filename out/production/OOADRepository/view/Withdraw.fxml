<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.WithdrawController"
            prefWidth="450" prefHeight="350"
            style="-fx-background-color: linear-gradient(to bottom, #E0E5EC, #F5F6FA);">

    <!-- Center Card -->
    <VBox spacing="15" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="40"
          AnchorPane.rightAnchor="40"
          AnchorPane.topAnchor="50"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);
                 -fx-padding: 25;">

        <!-- Header -->
        <Label text="Withdraw Funds"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;"/>

        <!-- Account Number -->
        <TextField fx:id="accountNumberField" promptText="Account Number"
                   style="-fx-background-color: #F9F9F9; -fx-background-radius: 5; -fx-padding: 5 10 5 10;"/>

        <!-- Amount -->
        <TextField fx:id="amountField" promptText="Amount (BWP)"
                   style="-fx-background-color: #F9F9F9; -fx-background-radius: 5; -fx-padding: 5 10 5 10;"/>

        <!-- Optional Notes / Validation -->
        <Label fx:id="noteLabel" text="" style="-fx-text-fill: #E74C3C; -fx-font-size: 12px;"/>

        <!-- Buttons -->
        <Button text="Withdraw" fx:id="withdrawButton"
                onAction="#handleWithdraw" prefWidth="220"
                style="-fx-background-color: #0A3D62; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

        <Button text="Back" fx:id="backButton"
                onAction="#handleBack" prefWidth="220"
                style="-fx-background-color: #3C6382; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
