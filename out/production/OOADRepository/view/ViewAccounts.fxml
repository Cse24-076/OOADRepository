<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ViewAccountsController"
            prefWidth="600" prefHeight="450"
            style="-fx-background-color: linear-gradient(to bottom, #E0E5EC, #F5F6FA);">

    <!-- Center Card -->
    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="40"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);
                 -fx-padding: 25;">

        <!-- Header -->
        <Label text="Your Accounts"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;" />

        <!-- Account List with placeholder text -->
        <ListView fx:id="accountListView" prefHeight="250" prefWidth="520"
                  style="-fx-background-color: #F9F9F9; -fx-background-radius: 10; -fx-border-radius: 10; -fx-padding: 5;">
            <placeholder>
                <Label text="No accounts available" style="-fx-text-fill: #3C6382; -fx-font-size: 14px;"/>
            </placeholder>
        </ListView>

        <!-- Back Button -->
        <Button text="Back" fx:id="backButton" onAction="#handleBack" prefWidth="200"
                style="-fx-background-color: #3C6382; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
