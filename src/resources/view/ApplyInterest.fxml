<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ApplyInterestController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: linear-gradient(to bottom, #E0E5EC, #F5F6FA);">

    <!-- Center Card -->
    <VBox spacing="20" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="60"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 20, 0, 0, 4);
                 -fx-padding: 25;">

        <!-- Header -->
        <Label text="Apply Monthly Interest"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0A3D62;" />

        <!-- Notification / Confirmation -->
        <Label fx:id="notificationLabel" text="" style="-fx-text-fill: #27ae60; -fx-font-size: 14px; -fx-wrap-text: true;" />

        <!-- Buttons -->
        <Button text="Apply Interest" fx:id="applyButton"
                onAction="#handleApplyInterest" prefWidth="220"
                style="-fx-background-color: #0A3D62; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>

        <Button text="Back" fx:id="backButton"
                onAction="#handleBack" prefWidth="220"
                style="-fx-background-color: #3C6382; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8;"/>
    </VBox>
</AnchorPane>
