<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ApplyInterestController"
            prefWidth="600" prefHeight="400" style="-fx-background-color: linear-gradient(to right, #00c6ff, #0072ff);">

    <VBox spacing="20" alignment="CENTER" layoutX="50" layoutY="50" prefWidth="500" prefHeight="300">
        <Label text="Apply Monthly Interest" style="-fx-font-size: 24px; -fx-text-fill: white;" />

        <Button text="Apply Interest" onAction="#handleApplyInterest"
                style="-fx-background-color: white; -fx-text-fill: #0072ff; -fx-font-weight: bold; -fx-background-radius: 8;" />

        <Button text="Back" onAction="#handleBack"
                style="-fx-background-color: white; -fx-text-fill: #0072ff; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </VBox>
</AnchorPane>
