<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RegisterIndividualController"
            prefWidth="450" prefHeight="400"
            stylesheets="@main.css">

    <VBox alignment="CENTER" spacing="12" layoutX="50" layoutY="40" prefWidth="350" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="40">
        <Label text="Register Individual Customer" styleClass="title-label" />

        <TextField fx:id="idField" promptText="Customer ID" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <TextField fx:id="addressField" promptText="Address" />
        <TextField fx:id="firstNameField" promptText="First Name" />
        <TextField fx:id="surnameField" promptText="Surname" />

        <Button text="Register" onAction="#handleRegister" styleClass="menu-button" prefWidth="200"/>
        <Button text="Back" onAction="#handleBack" styleClass="menu-button" prefWidth="200"/>
    </VBox>
</AnchorPane>
